<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/orange"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:id="@+id/Linear_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_logo_black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:text="РЕГИСТРАЦИЯ"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black_low"
                android:textSize="25dp"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/first_image"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <EditText
        android:id="@+id/reg_first_name"
        android:fontFamily="@font/montserrat_normal"
        app:backgroundTint="@color/black_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ваше имя"
        android:textColorHint="@color/black_low"
        android:textColor="@color/black_low"
        android:textSize="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/reg_second_name"
        android:fontFamily="@font/montserrat_normal"
        app:backgroundTint="@color/black_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ваша фамилия"
        android:textColorHint="@color/black_low"
        android:textColor="@color/black_low"
        android:textSize="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp" />
    <TextView
        android:fontFamily="@font/montserrat_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Дата рождения"
        android:textColor="@color/black_low"
        android:textSize="15dp"/>

    <DatePicker
        android:id="@+id/reg_date"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:theme="@style/MyDatePickerStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <Button
            android:id="@+id/reg_male"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/orange"
            android:text="Мужской"
            android:textColor="@color/black_low"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_button_non_activate"
            android:paddingLeft="15dp" />

        <Button
            android:id="@+id/reg_female"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/orange"
            android:text="Женский"
            android:textColor="@color/black_low"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_button_non_activate"
            android:paddingLeft="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/reg_button_next"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_black_low"
        android:text="Далее"
        android:textSize="25dp"
        android:textColor="@color/orange"
        android:fontFamily="@font/montserrat_bold"
        android:paddingLeft="60dp"
        android:paddingStart="60dp"
        android:paddingRight="60dp"
        android:paddingEnd="60dp"
        android:layout_gravity="center"/>

</LinearLayout>